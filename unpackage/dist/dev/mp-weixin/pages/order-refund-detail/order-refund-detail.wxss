.pages {
  height: 100vh;
  background-color: #eee;
  padding-top: 10px;
  box-sizing: border-box;
}
.goods {
  width: 98%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 20rpx;
}
.goods .left {
  width: 30%;
  min-width: 30%;
  padding: 10rpx;
}
.goods .left image {
  width: 100%;
  height: 100%;
}
.goods .right {
  min-width: 70%;
  padding: 10rpx;
}
.goods .right .title {
  width: 80%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods .right .attrs {
  font-size: 8pt;
  width: 80%;
  text-align: center;
}
.goods .right .num {
  padding-left: 15%;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 5%;
}
.goods .right .attr {
  width: 80%;
  height: 50%;
  margin-top: 5%;
  text-align: left;
}
.goods .right .attr text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  white-space: nowrap;
}
.tab .container {
  width: 97% !important;
  padding: 5rpx;
  margin: 20rpx auto;
  border-radius: 10rpx !important;
}
.tab .container #tab {
  z-index: 1;
}
.cause {
  width: 95%;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx auto;
  padding: 20rpx;
  box-sizing: border-box;
}
.cause .left {
  min-width: 30%;
}
.cause .right {
  height: 300rpx;
  overflow: hidden;
}
.price {
  width: 94%;
  height: 90rpx;
  margin: 0 auto;
  font-size: 11pt;
  line-height: 90rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
}
.voucher {
  width: 94%;
  padding: 20rpx;
  margin: 10rpx auto;
  box-sizing: border-box;
  background-color: #fff;
}
.voucher .img-list image {
  width: 160rpx;
  height: 160rpx;
}
.voucher image {
  width: 160rpx;
  height: 160rpx;
}
.food {
  width: 94%;
  background-color: #F06C7A;
  border-radius: 10rpx;
  position: fixed;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  bottom: 20rpx;
}
.food button {
  color: #fff;
  background-color: #F06C7A;
  border-radius: 10rpx;
}

